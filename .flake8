[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    migrations,
    staticfiles,
    media,
    htmlcov,
    .coverage,
    coverage.xml,
    .pytest_cache,
    .tox,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    tests/*:S101,S105,S106,S107
    migrations/*:E501
max-complexity = 10
